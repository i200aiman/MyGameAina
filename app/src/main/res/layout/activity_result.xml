<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        android:src="@drawable/mentol"

     />

    <TextView
        android:id="@+id/keputusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="309dp"
        android:layout_marginRight="309dp"
        android:text="Keputusan"

        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/5"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/keputusan"
        android:layout_marginTop="105dp"
     />

    <TextView
        android:id="@+id/totalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Markah : 333"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/resultLabel"
      />
    
    <Button
       android:id="@+id/btnreturn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Keluar"
        android:textSize="18sp"
        android:layout_below="@+id/totalScoreLabel"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>